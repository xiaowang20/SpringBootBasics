<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace=" com.wg.basics.mapper.MenuMapper">
    <resultMap id="BaseResultMap" type="com.wg.basics.entity.Menu">
        <id property="id" column="id"/>
        <result property="path" column="path"/>
        <collection property="roles" ofType="com.wg.basics.entity.Role">
            <id property="id" column="rid"/>
            <result property="name" column="rname"/>
            <result property="nameZh" column="rnameZh"/>
        </collection>
    </resultMap>
    <select id="getAllMenus" resultMap="BaseResultMap">
        select m.*,r.id AS rid,r.name AS rname,r.nameZh AS rnameZh
         from menu m LEFT JOIN menu_role mr ON m.id = mr.mid
            LEFT JOIN role r ON r.id = mr.rid
    </select>
</mapper>