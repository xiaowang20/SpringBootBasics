<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wg.basics.mapper.HrMapper">
    <insert id="register" parameterType="com.wg.basics.entity.Hr">
        insert into user(username,password,enable,locked) values
        (#{username},#{password},#{enable},#{locked})
    </insert>

    <select id="getUser" parameterType="java.lang.String" resultType="com.wg.basics.entity.Hr">
        select * from hr where username = #{username}
    </select>
